apiVersion: apps/v1
kind: Deployment
metadata:
  name: bms
  labels:
    app: bms
spec:
  replicas: 2
  selector:
    matchLabels:
      app: bms
  template:
    metadata:
      labels:
        app: bms
    spec:
      containers:
        - name: bms-container
          image: princelathiya/bms
          ports:
            - containerPort: 3000  # Your app runs on port 3000
---
apiVersion: v1
kind: Service
metadata:
  name: bms-service
spec:
  selector:
    app: bms
  ports:
    - protocol: TCP
      port: 80          # External port exposed to the world
      targetPort: 3000  # App container listens on 3000
  type: LoadBalancer
